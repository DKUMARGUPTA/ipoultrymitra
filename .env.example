# ============================================
# POULTRYMITRA - ENVIRONMENT CONFIGURATION
# Copy this file to .env.local and fill values
# ============================================

# SUPABASE API KEYS
# Get from: https://app.supabase.com → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ0eXAiOiJKV1QiLCJhbGc...
SUPABASE_SERVICE_ROLE_KEY=eyJ0eXAiOiJKV1QiLCJhbGc...

# APPLICATION SETTINGS
NEXT_PUBLIC_APP_NAME=PoultryMitra
NEXT_PUBLIC_APP_VERSION=11.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000

# FEATURES
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# DATABASE
NEXT_PUBLIC_DB_ENCRYPTION=true

# API ENDPOINTS
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# SECURITY
NEXT_PUBLIC_CORS_ORIGIN=http://localhost:3000
NEXT_SECURE_COOKIES=false

# OPTIONAL: Third-party integrations
# GOOGLE_MAPS_API_KEY=
